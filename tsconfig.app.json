
{
	"compilerOptions" : {
		"tsBuildInforFile" : "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"target" : "ES2020",
		"useDefineForClassFields" : true,
		"lib" : ["ES2020" , "DOM" , "DOM.Iterable"],
		"module" : "ESNext",
		"skipLibCheck" : true,
		
		/* Bundler mode  */
		"moduleResolution" : "bundler", 
		"allowImportingTsExtensions" : true,
		"isolateModules" : true,
		"moduleDetection" : "force",
		"noEmit" : true,
		"jsx" : "reac-jsx",
		
		/*  Linting  */
		"strict" :true,
		"noUnusedLocals" : true,
		"noUnusedParamters" : true,
		"noFallthroughCasesInSwitch" : true,
		"noUncheckedSideEffectImports" : true,
		"baseUrl" : ".",
		"paths" : {
			'@lib/*" : ["./lib/*"]
		},
		"typeRoots" : ["./node_modules/@types" , " ./@types"],
		/* 타입 선언 파일 생성 관련 */
		"declaration" : true,
		"declarationDir" : "dist",
		"esModuleInterop" : true,
		"emitDeclarationOnly" : true
	},
	"include" : ["src" , "lib" , "lib/index.ts" , "@types/index.d.ts"]
}