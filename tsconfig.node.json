{
  "compilerOptions": {
    "tsBuildInforFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode  */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolateModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /*  Linting  */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParamters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts"]
}
